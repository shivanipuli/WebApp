      <li class="top-menu righty"><a href="javascript:void(0)">Settings</a></li>
    </ul>
</div>
<div class="content">
    <div>
        <form id="ball_form" action="">
        <fieldset>
            <legend>The Ball</legend>

              <input type="radio" name="shape" value="round" id="shape_round">
              <label for="shape_round">round</label>

              <input type="radio" name="shape" value="square" id="shape_square">
              <label for="shape_square">square</label>

              <input type="radio" name="shape" value="dodecahedron" id="shape_dodecahedron">
              <label for="shape_dodecahedron">dodecahedron</label>

              <!-- DO NOT DO THIS!!! SUBMITs ARE GENERALLY NOT AS FLEXIBLE AS type="button" -->
              <button class="btn" type="submit" ><span>Submit For Inspection</span></button>
              <!-- DO NOT DO THIS!!! SUBMITs ARE GENERALLY NOT AS FLEXIBLE AS type="button" -->

         </fieldset>
         </form>
	</div>

    <div>
        <form id="user_form" action="">
        <fieldset>
            <legend>The User</legend>
    			<p>
    				<label>Username: </label>
    				<input type="text" name="username" value="" placeholder="pick something nice"/>
    			</p>
    			<p>
    				<label>Password: </label>
    				<input type="password" name="password" />
    			</p>
    			<button class="btn" type="button" onclick="usernameSubmitForm()"><span>Submit For Inspection</span></button>
          </fieldset>
        </form>
	</div>
</div>

</body>
</html>